[flake8]
max-line-length = 120
max-complexity = 45
ignore =
  E203
  W503      # line break before binary operator; conflicts with black
  E722      # bare except ok
  E731      # lambda expressions ok
  E266      # block comments
  E741      # ambiguous variable names
exclude =
    .git
    .tox
    __pycache__
    build
    dist
    docs
    .enterprise_extensions
    enterprise_extensions/src